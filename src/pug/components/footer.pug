.footer
    .container
        mixin full-list-item(link_href, item)
            li.footer-full__list-item
                a(href=link_href).footer-full__list-link=item
        .footer-full__wrapper
            .footer-full__tab
                input(type="checkbox" id="tab-1" name="tab-group")
                label(for="tab-1").footer-full__label Коллекции
                ul.footer-full__list
                    +full-list-item('#', 'Осень-зима 20-21')
                    +full-list-item('#', 'Вечерние комплекты')
                    +full-list-item('#', 'Предзаказ')
                    +full-list-item('#', 'Свадьба и выпускной')
            .footer-full__tab
                input(type="checkbox" id="tab-2" name="tab-group")
                label(for="tab-2").footer-full__label Шоурум
                ul.footer-full__list
                    +full-list-item('#', 'раз')
                    +full-list-item('#', 'два')
                    +full-list-item('#', 'три')
            .footer-full__tab
                input(type="checkbox" id="tab-3" name="tab-group")
                label(for="tab-3").footer-full__label Покупателям
                ul.footer-full__list
                    +full-list-item('#', 'Доставка')
                    +full-list-item('#', 'Акции')
                    +full-list-item('#', 'Возврат')
                    +full-list-item('#', 'Размерная таблица')
                    +full-list-item('#', 'Примерка')
                    +full-list-item('#', 'Оптовым покупателям')
            .footer-full__tab
                input(type="checkbox" id="tab-4" name="tab-group")
                label(for="tab-4").footer-full__label Компания
                ul.footer-full__list
                    +full-list-item('#', 'раз')
                    +full-list-item('#', 'два')
                    +full-list-item('#', 'три')
            .footer-full__tab
                input(type="checkbox" id="tab-5" name="tab-group")
                label(for="tab-5").footer-full__label Отзывы
                ul.footer-full__list
                    +full-list-item('#', 'раз')
                    +full-list-item('#', 'два')
                    +full-list-item('#', 'три')
            .footer-full__tab
                input(type="checkbox" id="tab-6" name="tab-group")
                label(for="tab-6").footer-full__label Контакты
                ul.footer-full__list
                    li.footer-full__list-item
                        a(href="tel:+8 (495) 150-14-77") ТЕЛ.: 8 (495) 150-14-77
                    li.footer-full__list-item
                        a(href="tel:+7 (977) 728-27-38") WHATSAPP: +7 (977) 728-27-38
                    li.footer-full__list-item
                        a(href="mailto:http://info@eleanboutique.ru") EMAIL: info@eleanboutique.ru
                    li.footer-full__list-item г. Москва, Новая площадь 8, стр.2, 5 этаж




        .footer__wrapper
            .footer__group-logo
                a(href="#").footer__logo-link
                    img(src="../../assets/imgs/logo.svg", alt="").footer__logo-img

            .footer__group-data
                a(href="tel:+8 (495) 150-14-77").footer__data-phone ТЕЛ.: 8 (495) 150-14-77
                a(href="tel:+7 (977) 728-27-38").footer__data-whatsapp WHATSAPP: +7 (977) 728-27-38
                
            .footer__group-email
                a(href="mailto:http://info@eleanboutique.ru") EMAIL: info@eleanboutique.ru

            .footer__group-nav
                .footer__nav
                    ul.footer__nav-list
                        li.footer__nav-item
                            a(href="#").footer__nav-link Доставка
                        li.footer__nav-item
                            a(href="#").footer__nav-link Оплата
                        li.footer__nav-item
                            a(href="#").footer__nav-link Возврат
                        li.footer__nav-item
                            a(href="#").footer__nav-link Размерная таблица
                        li.footer__nav-item
                            a(href="#").footer__nav-link Примерка
                        li.footer__nav-item
                            a(href="#").footer__nav-link Контакты

            .footer__group-address
                .footer__address-title Адрес
                .footer__address-text г. Москва, Новая площадь 8, стр.2, 5 этаж

            .footer__group-mode
                .footer__mode-title Режим работы
                .footer__mode-text с 9.00 до 21.00 шоурум: с 12.00 до 21.00

            .footer__group-social
                a.footer__social-icon(href="#")
                    +icon('instagram').topbar__social-icon--instagram
                a.footer__social-icon(href="#")
                    +icon('vkontakte').topbar__social-icon--vkontakte
                a.footer__social-icon(href="#")
                    +icon('facebook').topbar__social-icon--facebook
                

            .footer__group-form
                form(action="").footer__form
                    input(type="text", name="" placeholder="ИМЯ").footer__form-name
                    input(type="email", name="" placeholder="E-MAIL").footer__form-email

                    .footer__form-confidentiality 
                        input(type="checkbox", name="", id="footer-confidentiality").footer__form-checkbox
                        label(for="footer-confidentiality").footer__form-label
                            span Я согласен 
                            | с политикой конфиденциальности

                    button(type="submit").footer__form-btn Подписаться












