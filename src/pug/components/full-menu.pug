mixin menu-tab--contacts(tab_id)
    .menu-tab
        input(type="checkbox" id=tab_id name="tab-group").menu-tab__switch
        label(for=tab_id).menu-tab__label Контакты
        ul.menu-tab__list
            li.menu-tab__list-item
                +contact-phone()
            li.menu-tab__list-item
                +contact-whatsapp()
            li.menu-tab__list-item
                +contact-email()
            li.menu-tab__list-item 
                +contact-address()

