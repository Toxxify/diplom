mixin menu-tab--categories(tab_id)
    .menu-tab
        input(type="checkbox" id=tab_id name="tab-group").menu-tab__switch
        label(for=tab_id).menu-tab__label Категории
        ul.menu-tab__list
            +full-list-item('#', 'Юбки')
            +full-list-item('#', 'Смокинг')
            +full-list-item('#', 'Костюмы')
            +full-list-item('#', 'Аксессуары')
            +full-list-item('#', 'Брюки')
            +full-list-item('#', 'Блузы')
            +full-list-item('#', 'Платья')
            +full-list-item('#', 'Топы и жилеты')

